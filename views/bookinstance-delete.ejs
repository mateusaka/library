<style>
    .container {
        margin-left: 20px;
        margin-top: 20px
    }
</style>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Library</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("./partials/sidebar.ejs")%>
            </div>

            <div class="col-sm-10">
                <h1><%=title%>: <%=bookInstance.book.title%></h1>

                <% if(bookInstance.status !== "Available") {%>
                  <p><strong>The copy must be available before attempting to delete.</strong></p>                 
                <%} else {%>
                  <p>Do you really want to delete this copy?</p>
                  
                  <form method="POST" action="">
                    <div class="form-group">
                      <input id="bookinstanceid" class="form-control" type="hidden" name="bookinstanceid" required="true" value="<%=bookInstance._id%>">
                    </div>
                  
                    <button class="btn btn-primary" type="submit">Delete</button>
                  </form>                  
                <%}%>
            </div>
        </div>
    </div>
</body>

</html>