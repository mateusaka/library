<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Library</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("./partials/sidebar.ejs")%>
            </div>

            <div class="col-sm-10">
                <h1>
                    <%=title%>
                </h1>

                <ul>
                    <% if(bookInstanceList.length > 0) {%>
                        <% for(let instance of bookInstanceList) {%>
                            <li>
                                <a href="<%= instance.url %>"><%= instance.book.title %> : <%= instance.imprint %> -</a>

                                <% if (instance.status === "Available") { %>
                                    <span class="text-success"><%= instance.status %></span>
                                  <% } else if (instance.status === "Maintenance") { %>
                                    <span class="text-danger"><%= instance.status %></span>
                                  <% } else { %>
                                    <span class="text-warning"><%= instance.status %></span>
                                <%}%>
                                <% if (instance.status !== "Available") { %>
                                    <span>(Due: <%= instance.dueBackFormatted %>)</span>
                                <%}%>                                  
                            </li>
                        <%}%>
                    <%} else {%>
                        <li>
                            There are no book copies in this library.
                        </li>
                    <%}%>
                </ul>
            </div>
        </div>
    </div>
</body>

</html>